{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Ruff Linting",
      "type": "shell",
      "request": "launch",
      "script": "uv run ruff check src",
      "cwd": "${cwd}"
    },
    {
      "name": "Python: Current file",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Calibration program",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["-c"]
    },
    {
      "name": "Python: Main program in debug mode",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["-d"]
    }
  ]
}
