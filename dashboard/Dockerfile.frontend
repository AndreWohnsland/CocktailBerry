FROM python:3.13-slim-trixie
COPY --from=ghcr.io/astral-sh/uv:0.9.22 /uv /uvx /bin/

WORKDIR /app

# Copy pyproject.toml
COPY pyproject.toml ./

# Install dependencies using uv
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --extra frontend --no-install-project

# Copy frontend application code
COPY frontend/ /app/

EXPOSE 8050 80

CMD ["uv", "run", "--extra", "frontend", "gunicorn", "--workers=5", "--threads=1", "-b", "0.0.0.0:80", "index:server"]
